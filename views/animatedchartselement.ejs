    <canvas id="myPieChart2" width="100%" height="50"></canvas>


    <script>
        window.onload = startInterval;

        function startInterval() {
            setInterval("daa()", 1000);
        }

        function daa() {
            addData(myPieChart2, [10 + Math.floor(Math.random() * 21), 10 + Math.floor(Math.random() * 21), 10 + Math.floor(Math.random() * 21), 10 + Math.floor(Math.random() * 21)], 0);
        };

        function addData(chart, data, datasetIndex) {
            chart.data.datasets[datasetIndex].data = data;
            chart.update();
        }
    </script>

